@using System.Reflection;
@using Books.Controllers;
@using BooksLib;
@{
	@model IEnumerable<Author>
}

<!DOCTYPE html>

<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<title>Authors List</title>
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous" />
	<link href="~/Styles/style.css" rel="stylesheet" />
</head>
<body>
	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<h1>Authors List</h1>
				@using (Html.BeginForm("List", "Author", FormMethod.Post))
				{
					<div>
						<table>
							<tr>
								@foreach (PropertyInfo propInfo in typeof(Author).GetProperties())
								{
									<th>@propInfo.Name</th>
								}

							</tr>
							@if (Model?.Any() == true)
							{
								foreach (Author author in Model)
								{
									<tr>
										<td>
											@Html.DisplayFor(i => author.ID)
										</td>
										<td>
											@Html.DisplayFor(i => author.Name)
										</td>
										<td>
											@Html.DisplayFor(i => author.DateOfBirth)
										</td>
										<td>
											@Html.DisplayFor(i => author.DateOfDeath)
										</td>
										<td>
											@Html.ActionLink("Edit", "Edit", new { id = author.ID })
										</td>
										<td>
											@Html.ActionLink("Delete", "Delete", new { id = author.ID })
										</td>
									</tr>
								}
							}
						</table>
						<div class="action">
							@Html.ActionLink("Create Author", "Create")
						</div>
						<div class="action">
							@Html.ActionLink("Books", "List", "Book")
						</div>
					</div>
				}
			</div>
		</div>
		</div>
</body>
</html>
